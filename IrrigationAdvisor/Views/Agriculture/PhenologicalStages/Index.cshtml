@{
    ViewBag.Title = "Index";
    Layout = "Agriculture";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MinDegree)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MaxDegree)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RootDepth)
        </th>
