            @Html.DisplayNameFor(model => model.HydricBalanceDepth)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MinDegree)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MaxDegree)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RootDepth)
        </td>
