<script js>
    $(document).ready(function () {
        var saveBtn = $('#SaveBtn');
       
        var validationNuber = /^[0-9]{1,10}$/;

        function isNumber(n) {
            'use strict';
            n = n.replace(/\./g, '').replace(',', '.');
            return !isNaN(parseFloat(n)) && isFinite(n);
        }

        saveBtn.click(function ()
        {
            var validateForm = true;

  
            if ($('#SoilId').val().trim() != '') {
                $('#SoilIdError').html('');
                validateForm = true;
            }
            else {
                $('#SoilIdError').html('Seleccione el suelo');
                validateForm = false;
            }
            
            if (validateForm == true) {
                if ($('#Name').val().trim() != '') {
                    $('#NameError').html('');
                    validateForm = true;
                }
                else {
                    $('#NameError').html('Ingrese el nombre');
                    validateForm = false;
                }
            }

            if (validateForm == true) {
                if ($('#Order').val().trim() != '' || $('#Order').val().trim() != '0') {
                    if (!isNumber($("#Order").val())) {
                        $("#OrderError").html("En el Orden ingrese solo números");
                        validateForm = false;
                    }
                    else {
                        $('#OrderError').html('');
                        validateForm = true;
                    }
                }
                else {
                    $('#OrderError').html('Ingrese el Order');
                    validateForm = false;
                }
            }

            if (validateForm == true) {
                if ($('#HorizonLayerDepth').val().trim() != '' || $('#Order').val().trim() != '0') {
                    if (!isNumber($("#HorizonLayerDepth").val())) {
                        $("#HorizonLayerDepthError").html("En la Profundidad de la capa ingrese solo números");
                        validateForm = false;
                    }
                    else {
                        $('#HorizonLayerDepthError').html('');
                        validateForm = true;
                    }
                }
                else {
                    $('#HorizonLayerDepthError').html('Ingrese la Profundidad de la capa');
                    validateForm = false;
                }
            }

            if (validateForm == true) {
                if ($('#Sand').val().trim() != '' || $('#Order').val().trim() != '0') {
                    if (!isNumber($("#Sand").val())) {
                        $("#SandError").html("En la Arena ingrese solo números");
                        validateForm = false;
                    }
                    else {
                        $('#SandError').html('');
                        validateForm = true;
                    }
                }
                else {
                    $('#SandError').html('Ingrese la Arena');
                    validateForm = false;
                }
            }

            if (validateForm == true) {
                if ($('#Limo').val().trim() != '' || $('#Order').val().trim() != '0') {
                    if (!isNumber($("#Limo").val())) {
                        $("#LimoError").html("En el Barro (limo) ingrese solo números");
                        validateForm = false;
                    }
                    else {
                        $('#LimoError').html('');
                        validateForm = true;
                    }
                }       
                else {
                    $('#LimoError').html('Ingrese el Barro (limo)');
                    validateForm = false;
                }
            }

            if (validateForm == true) {
                if ($('#Clay').val().trim() != '' || $('#Order').val().trim() != '0') {
                    if (!isNumber($("#Clay").val())) {
                        $("#ClayError").html("En la Arsilla ingrese solo números");
                        validateForm = false;
                    }
                    else {
                        $('#ClayError').html('');
                        validateForm = true;
                    }

                }
                else {
                    $('#ClayError').html('Ingrese la Arsilla');
                    validateForm = false;
                }
            }

            if (validateForm == true) {
                if ($('#OrganicMatter').val().trim() != '' || $('#Order').val().trim() != '0') {
                    if (!isNumber($("#OrganicMatter").val())) {
                        $("#OrganicMatterError").html("En la Materia orgánica ingrese solo números");
                        validateForm = false;
                    }
                    else {
                        $('#OrganicMatterError').html('');
                        validateForm = true;
                    }
                }
                else {
                    $('#OrganicMatterError').html('Ingrese la Materia orgánica');
                    validateForm = false;
                }
            }

            if (validateForm == true) {
                if ($('#NitrogenAnalysis').val().trim() != '' || $('#Order').val().trim() != '0') {
                    if (!isNumber($("#NitrogenAnalysis").val())) {
                        $("#NitrogenAnalysisError").html("En el Análisis de nitrógeno ingrese solo números");
                        validateForm = false;
                    }
                    else {
                        $('#NitrogenAnalysisError').html('');
                        validateForm = true;
                    }
                }
                else {
                    $('#NitrogenAnalysisError').html('Ingrese el Análisis de nitrógeno orgánica');
                    validateForm = false;
                }
            }

            if (validateForm == true) {
                if ($('#BulkDensitySoil').val().trim() != '' || $('#Order').val().trim() != '0') {
                    if (!isNumber($("#BulkDensitySoil").val())) {
                        $("#BulkDensitySoilError").html("En la Densidad  ingrese solo números");
                        validateForm = false;
                    }
                    else {
                        $('#BulkDensitySoilError').html('');
                        validateForm = true;
                    }
                }
                else {
                    $('#BulkDensitySoilError').html('Ingrese la Densidad');
                    validateForm = false;
                }
            }





            if (validateForm == true) {
                myForm.submit();
