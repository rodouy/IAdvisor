@model IEnumerable<IrrigationAdvisor.Models.Agriculture.Crop>

@{
    ViewBag.Title = "Index";
   // Layout = "Agriculture";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Region
        </th>
        <th>
            Especie
        </th>
        <th>
            Nombre
        </th>
        <th>
            Estadio max. riego
        <th>
            Max. ETC riego
        </th>
        <th>
            Min. ETC riego
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Region.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Specie.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ShortName)
        </td>
        <td>
           @Html.DisplayFor(modelItem => item.StopIrrigationStage.ShortName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MaxEvapotranspirationToIrrigate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MinEvapotranspirationToIrrigate)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.CropId }) |
            @Html.ActionLink("Detalle", "Details", new { id=item.CropId }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.CropId })
        </td>
    </tr>
}

</table>
