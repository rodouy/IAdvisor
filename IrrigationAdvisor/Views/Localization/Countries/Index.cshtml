@model IEnumerable<IrrigationAdvisor.Models.Localization.Country>

@{
    ViewBag.Title = "Paises";
    //Layout = "Localization";
}

<h2>Países</h2>

<p>
    @Html.ActionLink("Nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Capital.Name)
        </th>
        <th width="20%"></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Capital.Name)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.CountryId }) |
            @Html.ActionLink("Detalle", "Details", new { id=item.CountryId }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.CountryId })
        </td>
    </tr>
}

</table>
